<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#1a1a1a"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_video"
        android:layout_width="fill_parent"
        android:layout_height="425px">

<com.tencent.rtmp.ui.TXCloudVideoView
    android:id="@+id/video_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

        <LinearLayout
            android:id="@+id/lay_update"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_countdown"
                android:layout_width="125px"
                android:layout_height="125px"
                android:background="@drawable/countdown_bg"
                android:gravity="center"
                android:text="5"
                android:textColor="#3cfe00"
                android:visibility="invisible"
                android:textSize="35sp"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_button"
        android:layout_width="match_parent"
        android:layout_height="177px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:background="@drawable/viewpager_background"
        android:orientation="vertical"
        android:padding="20px">

        <LinearLayout
            android:id="@+id/lay_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_main_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主标LOGO"
                        android:textColor="#a6a6a6"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/btn_main_logo"
                        android:layout_width="100px"
                        android:layout_height="60px"
                        android:layout_gravity="right"
                        android:background="@drawable/greenswitch_btn_off"/>


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="35px"
                android:layout_marginLeft="10dp"
                android:background="#5a5a5a"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大标题"
                        android:textColor="#a6a6a6"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/btn_title"
                        android:layout_width="100px"
                        android:layout_height="60px"
                        android:layout_gravity="right"
                        android:background="@drawable/greenswitch_btn_off"/>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备播图片"
                        android:textColor="#a6a6a6"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/btn_backup_pic"
                        android:layout_width="100px"
                        android:layout_height="60px"
                        android:layout_gravity="right"
                        android:background="@drawable/greenswitch_btn_off"/>


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="35px"
                android:layout_marginLeft="10dp"
                android:background="#5a5a5a"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="角标"
                        android:textColor="#a6a6a6"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/btn_corner_mark"
                        android:layout_width="100px"
                        android:layout_height="60px"
                        android:layout_gravity="right"
                        android:background="@drawable/greenswitch_btn_off"/>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/btn_livepush"
                android:layout_width="335px"
                android:layout_height="74px"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/livepush_btn_n"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/btn_livestart"
                android:layout_width="335px"
                android:layout_height="74px"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/livestart_btn_n"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/btn_copy"
                android:layout_width="335px"
                android:layout_height="74px"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/copy_livestream_btn"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/btn_change"
                android:layout_width="335px"
                android:layout_height="74px"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/change_t_btn"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>