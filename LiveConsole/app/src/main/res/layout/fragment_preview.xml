<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#1a1a1a"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/lay_preview"
        android:layout_width="fill_parent"
        android:layout_height="425px">

        <ImageView
            android:id="@+id/img_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>


            <ImageView
                android:id="@+id/img_main_logo"
                android:layout_width="98px"
                android:layout_height="48px"
                android:scaleType="fitXY"
                android:layout_marginLeft="36px"
                android:layout_marginTop="30px"/>


        <LinearLayout
            android:id="@+id/lay_update"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_update"
                android:layout_width="200px"
                android:layout_height="66px"
                android:layout_gravity="center"
                android:background="@drawable/t_change_btn_n"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lay_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/lay_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/img_corner_mark"
                android:orientation="horizontal">


            </LinearLayout>

            <ImageView
                android:id="@+id/img_corner_mark"
                android:layout_width="120px"
                android:layout_height="120px"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="@drawable/view_bottomline"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lay_main_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_main_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主标LOGO"
                        android:textColor="#a6a6a6"
                        android:textSize="17sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/btn_main_logo"
                        android:layout_width="100px"
                        android:layout_height="60px"
                        android:layout_gravity="right"
                        android:visibility="gone"
                        android:background="@drawable/greenswitch_btn_off"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_main_logo_select"
                android:layout_width="match_parent"
                android:layout_height="148px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@drawable/viewpager_background"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_add_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大标题面板"
                        android:textColor="#a6a6a6"
                        android:textSize="17sp"/>

                    <ImageView
                        android:id="@+id/btn_add_title"
                        android:layout_width="150px"
                        android:layout_height="60px"
                        android:layout_marginLeft="10px"
                        android:background="@drawable/add_t_btn"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/btn_title"
                        android:layout_width="100px"
                        android:layout_height="60px"
                        android:layout_gravity="right"
                        android:visibility="gone"
                        android:background="@drawable/greenswitch_btn_off"/>


                </LinearLayout>


            </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_title_select"
            android:layout_width="match_parent"
            android:layout_height="148px"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@drawable/viewpager_background"
            android:orientation="vertical">
        </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_backup_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备播图片"
                        android:textColor="#a6a6a6"
                        android:textSize="17sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/btn_backup_pic"
                        android:layout_width="100px"
                        android:layout_height="60px"
                        android:layout_gravity="right"
                        android:visibility="gone"
                        android:background="@drawable/greenswitch_btn_off"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_backup_pic_select"
                android:layout_width="match_parent"
                android:layout_height="148px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@drawable/viewpager_background"
                android:orientation="vertical">
            </LinearLayout>



            <LinearLayout
                android:id="@+id/lay_corner_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="角标"
                        android:textColor="#a6a6a6"
                        android:textSize="17sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/btn_corner_mark"
                        android:layout_width="100px"
                        android:layout_height="60px"
                        android:layout_gravity="right"
                        android:visibility="gone"
                        android:background="@drawable/greenswitch_btn_off"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_corner_mark_select"
                android:layout_width="match_parent"
                android:layout_height="148px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@drawable/viewpager_background"
                android:orientation="vertical">
            </LinearLayout>







        </LinearLayout>
    </ScrollView>
</LinearLayout>