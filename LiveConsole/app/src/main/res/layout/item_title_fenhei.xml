<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="79px"
                android:layout_height="70px"
                android:scaleType="fitXY"
                android:src="@drawable/fenhei_up_left"/>
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="70px"
                android:layout_weight="1"
                android:background="@drawable/fenhei_up_mid"
                android:paddingTop="15px"
                android:text="柳州银行歌仙杯电视歌手大赛柳州银行歌仙杯电视歌手大赛"
                android:lines="1"
                android:textColor="#ffffff"
                android:textSize="18px"/>


            <ImageView
                android:layout_width="17px"
                android:layout_height="70px"
                android:scaleType="fitXY"
                android:src="@drawable/fenhei_up_right"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31px"
            android:layout_marginTop="-24px"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="23px"
                android:layout_height="24px"
                android:scaleType="fitXY"
                android:src="@drawable/fenhei_down_left"/>

            <TextView
                android:id="@+id/txt_reporter"
                android:layout_width="0dp"
                android:layout_height="24px"
                android:layout_weight="1"
                android:background="@drawable/fenhei_down_mid"
                android:scaleType="fitXY"
                android:gravity="center_vertical"
                android:text="记者 罗笛 戴欣 刘益"
                android:lines="1"
                android:textColor="#cccccc"
                android:textSize="14px"/>

            <ImageView
                android:layout_width="16px"
                android:layout_height="24px"
                android:scaleType="fitXY"
                android:src="@drawable/fenhei_down_right"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>