<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="126px"
        android:layout_height="52px"
        android:scaleType="fitXY"
        android:src="@drawable/honghe_up_left"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="52px"
                android:layout_weight="1"
                android:background="@drawable/honghe_up_mid"
                android:text="柳州银行歌仙杯电视歌手大赛柳州银行歌仙杯电视歌手大赛"
                android:lines="1"
                android:textColor="#ffffff"
                android:textSize="18px"/>


            <ImageView
                android:layout_width="40px"
                android:layout_height="52px"
                android:scaleType="fitXY"
                android:src="@drawable/honghe_up_right"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="27px"
                android:layout_height="27px"
                android:scaleType="fitXY"
                android:src="@drawable/honghe_down_left"/>

            <TextView
                android:id="@+id/txt_reporter"
                android:layout_width="0dp"
                android:layout_height="27px"
                android:layout_weight="1"
                android:background="@drawable/honghe_down_mid3"
                android:scaleType="fitXY"
                android:text="记者 罗笛 戴欣 刘益"
                android:lines="1"
                android:textColor="#a60a0a"
                android:textSize="14px"/>

            <ImageView
                android:layout_width="28px"
                android:layout_height="27px"
                android:scaleType="fitXY"
                android:src="@drawable/honghe_down_right"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>