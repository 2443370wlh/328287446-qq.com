<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="94px"
        android:layout_height="68px"
        android:scaleType="fitXY"
        android:src="@drawable/lvqin_left"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="68px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="@drawable/lvqin_mid"
        android:orientation="vertical">


            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="柳州银行歌仙杯电视歌手大赛柳州银行歌仙杯电视歌手大赛"
                android:lines="1"
                android:textColor="#ffffff"
                android:textSize="18px"/>



            <TextView
                android:id="@+id/txt_reporter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:scaleType="fitXY"
                android:text="记者 罗笛 戴欣 刘益"
                android:lines="1"
                android:textColor="#ffffff"
                android:textSize="14px"/>


    </LinearLayout>
    <ImageView
        android:layout_width="31px"
        android:layout_height="68px"
        android:scaleType="fitXY"
        android:src="@drawable/lvqin_right"/>
    </LinearLayout>
</LinearLayout>